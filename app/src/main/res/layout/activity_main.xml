<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/IntroButtonsStyle"
            android:text="Go to Home Page"
            android:id="@+id/go_to_home"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/IntroButtonsStyle"
            android:text="Intro"
            android:id="@+id/btn_intro"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/IntroButtonsStyle"
            android:text="Activity"
            android:id="@+id/btn_activity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/IntroButtonsStyle"
            android:text="New Message"
            android:id="@+id/btn_new_message"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/IntroButtonsStyle"
            android:text="User Blog"
            android:id="@+id/user_blog"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/IntroButtonsStyle"
            android:text="Create Blog"
            android:id="@+id/btn_create_blog"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/IntroButtonsStyle"
            android:text="Blog"
            android:id="@+id/btn_blog"/>

    </LinearLayout>
</layout>