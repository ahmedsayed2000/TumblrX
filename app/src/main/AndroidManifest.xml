<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tumblrx2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TumblrX2"
        android:usesCleartextTraffic="true"
        android:vmSafeMode="true">
        <activity
            android:name=".signup.SignupActivity"
            android:exported="true" />
        <activity
            android:name=".login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".intro.IntroActivity"
            android:exported="true"
            android:theme="@style/splashScreenTheme">

        </activity>
        <activity
            android:name=".home.HomePageActivity"
            android:exported="false" />
        <activity
            android:name=".AddPostActivity"
            android:exported="false" />
        <activity
            android:name=".ActivityAndMessagesActivity"
            android:exported="false" />
        <activity
            android:name=".NewMessageActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
.
        <activity
            android:name=".ActivityCreateBlog"
            android:exported="false" />
        <activity
            android:name=".ActivityBlog"
            android:exported="true" >
        </activity>
    </application>

</manifest>